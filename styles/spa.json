{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "title": "Spa & Wellness",
    "settings": {
      "color": {
        "palette": [
          {
            "name": "Brand",
            "slug": "primary",
            "color": "#5BBCD6"
          },
          {
            "name": "Brand Accent",
            "slug": "primary-accent",
            "color": "#E8F5F2"
          },
          {
            "name": "Brand Alt",
            "slug": "primary-alt",
            "color": "#A5D8CA"
          },
          {
            "name": "Brand Alt Accent",
            "slug": "primary-alt-accent",
            "color": "#42858F"
          },
          {
            "name": "Contrast",
            "slug": "main",
            "color": "#2D4A4E"
          },
          {
            "name": "Contrast Accent",
            "slug": "main-accent",
            "color": "#E1EBE9"
          },
          {
            "name": "Base",
            "slug": "base",
            "color": "#fff"
          },
          {
            "name": "Base Accent",
            "slug": "secondary",
            "color": "#6A8D94"
          },
          {
            "name": "Tint",
            "slug": "tertiary",
            "color": "#F7FCFA"
          },
          {
            "name": "Border Base",
            "slug": "border-light",
            "color": "#D9E6E3"
          },
          {
            "name": "Border Contrast",
            "slug": "border-dark",
            "color": "#51757A"
          }
        ]
      },
      "typography": {
        "fontFamilies": [
          {
            "fontFamily": "Cormorant Garamond, serif",
            "name": "Cormorant Garamond",
            "slug": "heading",
            "fontFace": [
              {
                "fontDisplay": "swap",
                "fontFamily": "Cormorant Garamond",
                "fontStyle": "normal",
                "fontWeight": "300 700",
                "src": ["file:./assets/fonts/CormorantGaramond-VariableFont_wght.woff2"]
              },
              {
                "fontDisplay": "swap",
                "fontFamily": "Cormorant Garamond",
                "fontStyle": "italic",
                "fontWeight": "300 700",
                "src": ["file:./assets/fonts/CormorantGaramond-Italic-VariableFont_wght.woff2"]
              }
            ]
          },
          {
            "fontFamily": "Quicksand, sans-serif",
            "name": "Quicksand",
            "slug": "body",
            "fontFace": [
              {
                "fontDisplay": "swap",
                "fontFamily": "Quicksand",
                "fontStyle": "normal",
                "fontWeight": "300 700",
                "src": ["file:./assets/fonts/Quicksand-VariableFont_wght.woff2"]
              }
            ]
          }
        ]
      }
    },
    "styles": {
      "typography": {
        "fontFamily": "var(--wp--preset--font-family--body)"
      },
      "elements": {
        "heading": {
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--heading)",
            "fontWeight": "500",
            "letterSpacing": "-0.02em"
          }
        }
      }
    }
  }